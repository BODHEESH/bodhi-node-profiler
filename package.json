{
  "name": "bodhi-node-profiler",
  "version": "1.0.0",
  "description": "A lightweight, zero-configuration performance profiler for Node.js applications with real-time monitoring, memory leak detection, and CPU profiling",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "bin": {
    "bodhi-profiler": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "example": "node example/app.js",
    "prepublishOnly": "npm run build && npm test",
    "start": "node dist/index.js"
  },
  "keywords": [
    "profiler",
    "performance",
    "monitoring",
    "nodejs",
    "express",
    "debug",
    "memory-leak",
    "cpu-profiling",
    "metrics",
    "apm",
    "application-monitoring",
    "performance-monitoring",
    "real-time",
    "dashboard",
    "analytics",
    "debugging",
    "optimization",
    "memory-usage",
    "cpu-usage",
    "event-loop",
    "api-monitoring",
    "response-time",
    "typescript",
    "devops",
    "development-tools",
    "diagnostics",
    "logging",
    "profiling-tool",
    "web-dashboard",
    "performance-metrics",
    "node-profiler",
    "server-monitoring",
    "backend-tools",
    "microservices",
    "observability",
    "performance-analysis",
    "resource-monitoring",
    "system-metrics",
    "troubleshooting",
    "web-performance"
  ],
  "author": "Bodheesh VC <bodheeshvc.developer@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "pidusage": "^3.0.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/pidusage": "^2.0.5",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bodheeshvc/bodhi-node-profiler"
  },
  "bugs": {
    "url": "https://github.com/bodheeshvc/bodhi-node-profiler/issues"
  },
  "homepage": "https://github.com/bodheeshvc/bodhi-node-profiler#readme"
}
